<?xml version="1.0" encoding="utf-8"?>

<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:dividerPadding="5dp"
    android:gravity="left"
    app:layout_dodgeInsetEdges="none">

        <TextView
            android:id="@+id/textView_deptRep_disbursement_list_item"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="start"
            android:maxLines="3"
            android:text="Test"
            android:textAlignment="textStart"
            android:textSize="18sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_deptRep_disbursement_list_qty"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_row="0"
            android:layout_weight="0"
            android:text="Testse"
            android:textAlignment="textStart"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/textView_deptRep_disbursement_list_item" />


</TableRow>